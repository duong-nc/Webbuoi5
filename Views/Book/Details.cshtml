@model ktraltweb.Models.Book

<h2>Chi tiết sách</h2>

<table class="table">
    <tr>
        <th>Tiêu đề</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Tác giả</th>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <th>Mô tả</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Giá</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Hình ảnh</th>
        <td>
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Book Image" width="200" />
            }
        </td>
    </tr>
</table>

<a href="@Url.Action("Index")">Trở lại danh sách sách</a>
